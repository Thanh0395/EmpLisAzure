@model Buoi03Core.Models.Employee
@{
    ViewBag.Title = "Create";
}

<h2>New Employee</h2>
<form asp-action="CreateView" enctype="multipart/form-data" method="post">
    <div class="form-control">
        <label class="form-label">Employee Name</label>
        <input asp-for="EmployeeName" type="text" />
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
    </div>
    <div class="form-control">
        <label class="form-label">Phone</label>
        <input asp-for="Phone" type="text" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-control">
        <label class="form-label">Skill</label>
        <input asp-for="Skill" type="text" />
        <span asp-validation-for="Skill" class="text-danger"></span>
    </div>
    <div class="form-control">
        <label class="form-label">Experiences</label>
        <input asp-for="Experiences" type="number" />
        <span asp-validation-for="Experiences" class="text-danger"></span>
    </div>
    <div class="form-control">
        <label>Image</label>
        <input name="fileUploadxx" type="file" required/>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-control">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>